
<%= form_for(@portfolio_item) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle %>
    </div>
  
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>

    <ul>
    <%= form.fields_for :technalogies do |technalogy_form| %>
      <li>
        <%= technalogy_form.label :name %>
        <%= technalogy_form.text_field :name %>
      </li>
      
    <% end %>
    </ul>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  